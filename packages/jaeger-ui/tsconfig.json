{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "isolatedModules": true,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "checkJs": false,
    "noImplicitThis": false,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "strict": false,
    "noStrictGenericChecks": true,
    "target": "es2020",
    "module": "esnext",
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.module\\.scss$",
        }
      }
    ],
  },
  "include": [
    "src/**/*.tsx",
    "typings"
  ]
}